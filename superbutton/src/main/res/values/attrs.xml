<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SuperButton">
        <!--默认配置-->
        <attr name="text" format="string|reference" />
        <attr name="text_color" format="color" />
        <attr name="text_size" format="dimension" />
        <!--默认背景颜色-->
        <attr name="color_normal" format="color" />
        <!--按压时的背景颜色-->
        <attr name="color_pressed" format="color" />

        <!--图片在文字左边-->
        <attr name="drawable_left" format="reference" />
        <!--图片在文字右边-->
        <attr name="drawable_right" format="reference" />
        <!--图片在文字上边-->
        <attr name="drawable_top" format="reference" />
        <!--图片在文字下边-->
        <attr name="drawable_bottom" format="reference" />
        <!--图片距文字的距离-->
        <attr name="drawable_padding" format="dimension" />

        <!--形状-->
        <attr name="shape" format="enum">
            <!--圆形-->
            <enum name="CIRCLE" value="1" />
            <!--矩形-->
            <enum name="RECT" value="2" />
        </attr>
        <!--圆形半径-->
        <attr name="circle_radius" format="dimension" />

        <!--按钮背景是渐变色时设置-->
        <!--开始颜色-->
        <attr name="color_start" format="color" />
        <!--中间颜色-->
        <attr name="color_middle" format="color" />
        <!--结束颜色-->
        <attr name="color_end" format="color" />
        <!--颜色方向-->
        <attr name="color_direction" format="enum">
            <enum name="LEFT_TO_RIGHT" value="0" />
            <enum name="RIGHT_TO_LEFT" value="1" />
            <enum name="TOP_TO_BOTTOM" value="2" />
            <enum name="BOTTOM_TO_TOP" value="3" />
        </attr>

        <!--按钮圆角，如果单独设置会覆盖此设置-->
        <attr name="corner" format="dimension" />
        <!--左上角圆角半径-->
        <attr name="corner_left_top" format="dimension" />
        <!--左下角圆角半径-->
        <attr name="corner_left_bottom" format="dimension" />
        <!--右上角圆角半径-->
        <attr name="corner_right_top" format="dimension" />
        <!--右下角圆角半径-->
        <attr name="corner_right_bottom" format="dimension" />

        <!--边框宽度-->
        <attr name="border_width" format="dimension" />
        <!--边框颜色-->
        <attr name="border_color" format="color" />

    </declare-styleable>
</resources>